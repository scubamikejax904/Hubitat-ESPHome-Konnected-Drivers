//Modified to work with Hubitat 2.4.3.131 and Konnected Alarm Driver by ScubaMikeJax904 10-7-2025

metadata {
    definition(
        name: 'ESPHOME Switch',
        namespace: 'esphome',
        author: 'Jonathan Bradshaw',
        singleThreaded: true,
        importUrl: '') {

        capability 'Sensor'
        capability 'Refresh'
        capability 'Switch'
    }

    preferences {
        input name: 'logEnable',
                type: 'bool',
                title: 'Enable Debug Logging',
                required: false,
                defaultValue: false

        input name: 'logTextEnable',
              type: 'bool',
              title: 'Enable descriptionText logging',
              required: false,
              defaultValue: true
    }
}

public void initialize() {
    // Child device initialization handled by parent
    if (logEnable) {
        runIn(1800, 'logsOff')
    }
}

public void installed() {
    log.info "${device} child device installed"
}

public void logsOff() {
    device.updateSetting('logEnable', false)
    log.info "${device} debug logging disabled"
}

public void updated() {
    log.info "${device} driver configuration updated"
    initialize()
}

public void uninstalled() {
    log.info "${device} child device uninstalled"
}

// Switch commands - delegate to parent
public void on() {
    if (logTextEnable) { log.info "${device} on command" }
    parent?.componentOn(device)
}

public void off() {
    if (logTextEnable) { log.info "${device} off command" }
    parent?.componentOff(device)
}

public void refresh() {
    // Don't call componentRefresh since it's not implemented in parent
    // Just log the refresh request
    if (logTextEnable) { log.info "${device} refresh requested (handled by parent)" }
}

// Simplified parse method for child device
// The parent will call this with processed events
public void parse(List<Map> events) {
    if (logEnable) { log.debug "Child device received events: ${events}" }
    
    events.each { event ->
        processChildEvent(event)
    }
}

// Helper method for parent to send events directly
public void sendChildEvent(Map event) {
    if (logEnable) { log.debug "Child device received event: ${event}" }
    processChildEvent(event)
}

// Process individual events
private void processChildEvent(Map event) {
    switch (event.name) {
        case 'switch':
            if (device.currentValue('switch') != event.value) {
                String typeText = event.type ? " (${event.type})" : ""
                if (logTextEnable) { 
                    log.info "${device} ${event.descriptionText ?: "switch is ${event.value}${typeText}"}"
                }
                sendEvent(event)
            }
            break
    }
}
